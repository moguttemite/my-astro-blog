---
import type { CollectionEntry } from 'astro:content';
import FormattedDate from '../components/FormattedDate.astro';

type Props = CollectionEntry<'blog'>['data'];

const { title, publishedAt } = Astro.props as Props;
---

<article class="post">
	<header class="post-header">
		<div class="post-date">
			<FormattedDate date={publishedAt} />
		</div>
		<h1 class="post-title">{title}</h1>
		<hr class="post-divider" />
	</header>

	<section class="post-body">
		<slot />
	</section>
</article>

<style>
	.post {
		max-width: 820px;
		margin: 0 auto;
	}

	.post-header {
		padding-top: 0.5rem;
	}

	.post-date {
		color: rgb(var(--gray));
		font-size: 0.95rem;
		margin-bottom: 0.5rem;
	}
	:root[data-theme="dark"] .post-date {
		color: rgba(255, 255, 255, 0.55);
	}

	.post-title {
		margin: 0;
		font-size: 3rem;
		line-height: 1.1;
	}
	:root[data-theme="dark"] .post-title {
		color: #f2f2f2; /* 比 body 更亮 */
	}

	.post-divider {
		margin: 1rem 0 0 0;
		border: none;
		border-top: 1px solid rgb(var(--gray-light));
	}
	:root[data-theme="dark"] .post-divider {
		border-top: 1px solid rgba(255, 255, 255, 0.12);
	}

	.post-body {
		margin-top: 1.25rem;
		line-height: 1.75;
	}
	:root[data-theme="dark"] .post-body a {
		color: #7aa2ff;
	}
	:root[data-theme="dark"] .post-body a:hover {
		color: #9bb7ff;
	}
</style>
