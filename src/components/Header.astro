// 主平台（第一个平台，窄屏时单独显示）
const primaryPlatform = platforms[0];
// 其他平台（窄屏时收拢到下拉菜单）
const otherPlatforms = platforms.slice(1);
// 下拉触发器 SVG（三个点图标）
const dropdownTriggerSvg = `<svg role="img" viewBox="0 0 24 24" xmlns="http://www.w3.org/2000/svg" fill="currentColor"><circle cx="12" cy="5" r="2"/><circle cx="12" cy="12" r="2"/><circle cx="12" cy="19" r="2"/></svg>`;
---

<header>
	<div class="header-container w-full flex items-center">
		<!-- Left: Site Identity -->
		<div class="site-identity flex-shrink-0">
			<Logo />
		</div>

		<!-- Center: Empty nav (semantic only) -->
		<nav class="flex-1" aria-label="Main navigation"></nav>

		<!-- Right: External Platforms -->
		<div class="platforms-container flex-shrink-0 flex items-center gap-2">
			<!-- 宽屏：所有平台并列展示，每一项直接跳转 -->
			<div class="platforms-wide hidden md:flex items-center gap-3">
				{platforms.map((p) => (
					<a
						href={p.href}
						target="_blank"
						rel="noopener noreferrer"
						class="platform-link inline-flex items-center gap-1.5 px-2 py-1.5 text-sm transition-colors"
						aria-label={p.name}
					>
						<span class="inline-flex items-center justify-center w-5 h-5" set:html={p.svg}></span>
					</a>
				))}
			</div>

			<!-- 窄屏：主平台直接跳转 + 下拉触发器 -->
			<div class="platforms-narrow md:hidden flex items-center gap-2 relative">
				<!-- 主平台直接跳转 -->
				<a
					href={primaryPlatform.href}
					target="_blank"
					rel="noopener noreferrer"
					class="platform-link-primary inline-flex items-center gap-1.5 px-2 py-1.5 text-sm transition-colors"
					aria-label={primaryPlatform.name}
				>
					<span class="inline-flex items-center justify-center w-5 h-5" set:html={primaryPlatform.svg}></span>
				</a>

				<!-- 下拉触发器（仅图标，无文字） -->
				{otherPlatforms.length > 0 && (
					<>
						<button
							id="platform-dropdown-trigger"
							class="platform-dropdown-trigger inline-flex items-center justify-center w-8 h-8 transition-colors"
							aria-haspopup="true"
							aria-expanded="false"
							type="button"
							aria-label="更多平台"
						>
							<span class="inline-flex items-center justify-center w-5 h-5" set:html={dropdownTriggerSvg}></span>
						</button>

						<!-- 下拉菜单（仅包含其他平台，不包含主平台） -->
						<ul
							id="platform-dropdown"
							class="platform-dropdown absolute right-0 top-full mt-1.5 min-w-[11rem] rounded-lg py-1 hidden z-50"
							role="menu"
						>
							{otherPlatforms.map((p) => (
								<li role="none">
									<a
										href={p.href}
										target="_blank"
										rel="noopener noreferrer"
										class="platform-item flex items-center gap-2.5 px-3 py-2 text-sm transition-colors"
										role="menuitem"
									>
										<span class="inline-flex items-center justify-center w-5 h-5 flex-shrink-0" set:html={p.svg}></span>
										<span class="platform-name">{p.name}</span>
									</a>
								</li>
							))}
						</ul>
					</>
				)}
			</div>
		</div>
	</div>
</header>

<script>
	// 下拉菜单交互逻辑（客户端脚本，仅窄屏）
	const trigger = document.getElementById('platform-dropdown-trigger');
	const dropdown = document.getElementById('platform-dropdown');

	if (trigger && dropdown) {
		// 点击触发器切换下拉菜单
		trigger.addEventListener('click', (e) => {
			e.stopPropagation();
			const isExpanded = trigger.getAttribute('aria-expanded') === 'true';
			trigger.setAttribute('aria-expanded', String(!isExpanded));
			dropdown.classList.toggle('hidden');
		});

		// 点击外部关闭下拉菜单
		document.addEventListener('click', (e) => {
			const target = e.target;
			if (target instanceof Node && !trigger.contains(target) && !dropdown.contains(target)) {
				trigger.setAttribute('aria-expanded', 'false');
				dropdown.classList.add('hidden');
			}
		});

		// ESC 键关闭下拉菜单
		document.addEventListener('keydown', (e) => {
			if (e.key === 'Escape') {
				trigger.setAttribute('aria-expanded', 'false');
				dropdown.classList.add('hidden');
			}
		});
	}
</script>

<style>
	header {
		min-height: 3.5rem;
		margin: 0;
		padding: 0 1em;
		display: flex;
		align-items: center;

		background: white;
		border-bottom: 1px solid rgb(var(--gray-light));
		box-shadow: none;
	}
	:root[data-theme="dark"] header {
		background: #2f3232; /* 与 body 同色 */
		border-bottom: 1px solid rgba(255, 255, 255, 0.08);
	}

	h2 {
		margin: 0;
		font-size: 1em;
	}

	h2 a {
		text-decoration: none;
		color: rgb(var(--black));
		padding: 1em 0.5em;
		display: inline-block;
	}
	:root[data-theme="dark"] h2 a {
		color: #e6e6e6;
	}

	.header-container {
		width: 100%;
		display: flex;
		align-items: center;
	}

	/* Platform Links (Wide Screen) */
	.platform-link {
		color: rgb(var(--gray-dark));
		text-decoration: none;
		border-radius: 6px;
	}

	.platform-link:hover {
		background: rgb(var(--gray-light));
		color: rgb(var(--black));
	}


	/* Platform Link Primary (Narrow Screen) */
	.platform-link-primary {
		color: rgb(var(--gray-dark));
		text-decoration: none;
		border-radius: 6px;
	}

	.platform-link-primary:hover {
		background: rgb(var(--gray-light));
		color: rgb(var(--black));
	}

	/* Dropdown Trigger (Narrow Screen Only) */
	.platform-dropdown-trigger {
		color: rgb(var(--gray-dark));
		border: none;
		border-radius: 6px;
		background: transparent;
		cursor: pointer;
		padding: 0;
	}

	.platform-dropdown-trigger:hover {
		background: rgb(var(--gray-light));
		color: rgb(var(--black));
	}

	.platform-dropdown-trigger[aria-expanded="true"] {
		background: rgb(var(--gray-light));
	}

	/* Platform Dropdown Menu */
	.platform-dropdown {
		border: 1px solid rgb(var(--gray-light));
		box-shadow: 0 2px 8px rgba(var(--black), 8%), 0 4px 16px rgba(var(--black), 4%);
		background: white;
	}
	:root[data-theme="dark"] .platform-dropdown {
		background: #3a3d3d; /* 比 header 略亮 */
		border: 1px solid rgba(255, 255, 255, 0.1);
		box-shadow: none;
	}

	.platform-item {
		color: rgb(var(--gray-dark));
		text-decoration: none;
		border-radius: 4px;
		margin: 0.125rem 0.5rem;
	}
	:root[data-theme="dark"] .platform-item {
		color: #e6e6e6;
	}

	.platform-item:hover {
		background: rgb(var(--gray-light));
		color: rgb(var(--black));
	}
	:root[data-theme="dark"] .platform-item:hover {
		background: rgba(255, 255, 255, 0.08);
	}

	.platform-item .platform-name {
		color: inherit;
	}

	:root[data-theme="dark"] .platform-link,
	:root[data-theme="dark"] .platform-link-primary,
	:root[data-theme="dark"] .platform-dropdown-trigger {
		color: rgba(255, 255, 255, 0.7);
	}

	:root[data-theme="dark"] .platform-link:hover,
	:root[data-theme="dark"] .platform-link-primary:hover,
	:root[data-theme="dark"] .platform-dropdown-trigger:hover {
		background: rgba(255, 255, 255, 0.08);
	}
</style>
