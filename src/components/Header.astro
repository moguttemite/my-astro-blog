---
import { SITE_TITLE } from '../consts';

const platforms = [
  {
    name: 'X',
    href: 'https://x.com/your_id',
    svg: `
      <svg viewBox="0 0 24 24" aria-hidden="true" width="20" height="20">
        <path
          fill="currentColor"
          d="M18.244 2H21l-6.518 7.455L22 22h-6.828l-5.35-6.985L3.95 22H1l7.001-8.01L2 2h6.828l4.843 6.34L18.244 2z"
        />
      </svg>
    `,
  },
  {
    name: 'Qiita',
    href: 'https://qiita.com/your_id',
    svg: `
      <svg viewBox="0 0 24 24" aria-hidden="true" width="20" height="20">
        <path
          fill="currentColor"
          d="M12 2C6.477 2 2 6.485 2 12s4.477 10 10 10 10-4.485 10-10S17.523 2 12 2zm1.2 15.5h-2.4v-11h2.4v11z"
        />
      </svg>
    `,
  },
  {
    name: '微信公众号',
    href: 'https://mp.weixin.qq.com/your_id',
    svg: `
      <svg viewBox="0 0 24 24" aria-hidden="true" width="20" height="20">
        <circle cx="12" cy="12" r="10" fill="currentColor" />
      </svg>
    `,
  },
];

---

<header>
	<nav>
		<!-- Left: Site Identity -->
		<h2><a href="/">{SITE_TITLE}</a></h2>

		<!-- Right: External Platforms -->
		<div class="social-links relative hidden md:flex items-center">
			<button class="
					platform-trigger
					inline-flex items-center gap-1
					px-2 py-1
					text-sm text-black
					hover:opacity-80
				" 
				aria-haspopup="true">
				X <span class="caret text-xs">▾</span>
			</button>

			<ul 
				class=
					"
						platform-dropdown
						absolute right-0 top-full mt-2
						min-w-[10rem]
						rounded-lg
						rounded-lg
						bg-white
						shadow-lg
						py-1
					">
				{platforms.map((p) => (
				<li>
					<a href={p.href} target="_blank" rel="noopener noreferrer" 
						class="
							flex items-center gap-2
							px-3 py-2
							text-sm text-black
							hover:bg-black/5
						">
					<span class="platform-icon inline-flex text-black" set:html={p.svg}></span>
					<span class="platform-name">>{p.name}</span>
					</a>
				</li>
				))}
			</ul>
		</div>
	</nav>
</header>
<style>
	header {
		min-height: 3.5rem;
		margin: 0;
		padding: 0 1em;
		background: white;
		box-shadow: 0 2px 8px rgba(var(--black), 5%);

		display: flex;
		align-items: center;
	}
	h2 {
		margin: 0;
		font-size: 1em;
	}

	h2 a,
	h2 a.active {
		text-decoration: none;
	}
	nav {
		height: 100%;
		width: 100%;
		display: flex;
		align-items: center;
		justify-content: space-between;
	}
	nav a {
		padding: 1em 0.5em;
		color: var(--black);
		border-bottom: 4px solid transparent;
		text-decoration: none;
	}
	nav a.active {
		text-decoration: none;
		border-bottom-color: var(--accent);
	}
	.social-links,
	.social-links a {
		display: flex;
	}
	@media (max-width: 720px) {
		.social-links {
			display: none;
		}
	}
</style>
